        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:my="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:local="clr-namespace:UserForms"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <WindowsFormsHost x:Name="windowsFormsHost1" HorizontalAlignment="Left" Height="24" Margin="130,36,0,0" VerticalAlignment="Top" Width="130">
            <wf:MaskedTextBox Name="MaskedTextBox1" Mask="(000)-000-0000" />
        </WindowsFormsHost>
        <Button Name="Button1" Click="Button1_Click" Content="Add to collection" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="104"/>
        <Button Name="Button2" Click="Button2_Click" Content="Save collection to file" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Bottom" Width="122"/>


    </Grid>
</Window>
